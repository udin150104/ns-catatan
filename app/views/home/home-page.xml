<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
  <StackLayout>
    <FlexboxLayout justifyContent="flex-start" alignItems="center" class="actionBar">
      <Label text="{{ titlePage }}" class="actionBarTitleSingle" />
    </FlexboxLayout>
    <GridLayout rows="*" columns="*">
      <StackLayout row="0" col="0">
        <ListView items="{{ notes }}" class="warp" visibility="{{ hasNotes ? 'visible' : 'collapse' }}">
          <ListView.itemTemplate >
            <FlexboxLayout flexDirection="column" class="card" >
              <!-- Judul di atas -->
              <Label text="{{ title }}" class="card-title" textWrap="true" />

              <!-- Baris bawah: tanggal di kiri, tombol edit & hapus di kanan -->
              <FlexboxLayout flexDirection="row" alignItems="center" gap="18">
                <!-- Tanggal di kiri, grow agar dorong tombol ke kanan -->
                <Label text="{{ formattedDate }}" class="note-date text-gray" flexGrow="1" />

                <!-- Tombol edit -->
                <Label text="edit" class="label-material-icons-sm text-gray" tap="onEdit" />

                <!-- Tombol hapus -->
                <Label text="delete" class="label-material-icons-sm text-danger" tap="onDelete" />
              </FlexboxLayout>
            </FlexboxLayout>
          </ListView.itemTemplate>
        </ListView>
        <!-- Teks jika kosong -->
        <Label text="Belum ada catatan." class="text-gray text-center p-20" visibility="{{ hasNotes ? 'collapse' : 'visible' }}" />
      </StackLayout>
      <Button text="+" tap="onAddTap" class="fab" width="56" height="56" verticalAlignment="bottom" horizontalAlignment="right" margin="16" />
    </GridLayout>
  </StackLayout>
</Page>
